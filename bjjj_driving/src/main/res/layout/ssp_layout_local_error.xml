<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    android:gravity="center"
    android:onClick="onClick"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/common_white_round"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="15dp">


        <RelativeLayout
            android:id="@+id/iv_local_close"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onClick">

            <TextView
                android:id="@+id/tv_local_tile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="温馨提示"
                android:textColor="#ff333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_local_error"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:onClick="onClick"
                android:src="@drawable/ssp_btn_close" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_local_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:text="实例描述"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E5E5E5" />

        <TextView
            android:id="@+id/tv_local_sure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="确定"
            android:textColor="@color/ssp_blue"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>